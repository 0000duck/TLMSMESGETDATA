<Window x:Class="TLMSMESGETDATA.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TLMSMESGETDATA"
        mc:Ignorable="d"
        Title="MainWindow" Height="586.4" Width="968.2" Loaded="Window_Loaded" Closing="Window_Closing" Closed="Window_Closed">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="160*"/>
            <ColumnDefinition Width="321*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="80*"/>
            <RowDefinition Height="80*"/>
            <RowDefinition Height="80*"/>
            <RowDefinition Height="290*"/>
            <RowDefinition Height="27*"/>
        </Grid.RowDefinitions>
        <RichTextBox x:Name="richTextBox" Grid.Column="1" Margin="10,0,9.6,9.8" Grid.Row="2" Grid.RowSpan="3" Background="#FF292323">
            <FlowDocument>
                <Paragraph>
                    <Run Text="RichTextBox"/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
        <DataGrid Margin="0,10,0,26.8" Grid.Row="3" Grid.RowSpan="2"/>
        <Label Content="GET DATA TO MES" Grid.Column="1" Margin="0,0,-0.4,0" FontSize="48" VerticalAlignment="Bottom" Foreground="#FFCAE727" Height="80" FontWeight="Bold">
            <Label.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="#FF67F9F1" Offset="0.457"/>
                </LinearGradientBrush>
            </Label.Background>
            <Label.BorderBrush>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="#FF21CEBF" Offset="1"/>
                </LinearGradientBrush>
            </Label.BorderBrush>
        </Label>
        <Label Content="machines" FontSize="48" Foreground="#FFEEB82D" FontWeight="Bold" Grid.Row="2" Margin="0,1,0,5" HorizontalAlignment="Center" VerticalAlignment="Center" Width="320" Height="74">
            <Label.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="#FF67F9F1" Offset="0.457"/>
                </LinearGradientBrush>
            </Label.Background>
            <Label.BorderBrush>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="#FF21CEBF" Offset="1"/>
                </LinearGradientBrush>
            </Label.BorderBrush>
        </Label>
        <Label x:Name="lb_output" Content="OK" HorizontalAlignment="Left" Margin="10,50,0,0" Grid.Row="1" VerticalAlignment="Top" Height="28" Width="105"/>
        <Label x:Name="lb_NG" Content="NG" HorizontalAlignment="Left" Margin="155,50,0,0" Grid.Row="1" VerticalAlignment="Top" Height="28" Width="105"/>
        <Button x:Name="btn_connect" Content="connect" Margin="10,10,0,10" HorizontalAlignment="Left" Width="70" Click="Btn_test_Click"/>
        <Label x:Name="lb_barcode" Content="Barcode" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="35" Width="300" Grid.Row="1"/>
        <Ellipse Name="ElipsStatus" HorizontalAlignment="Left" Height="50" Margin="255,10,0,0" Stroke="#FFD2DF34" VerticalAlignment="Top" Width="55" Fill="#FFD2EE33"/>
        <Button x:Name="btn_disconnect" Content="Disconnect" Margin="85,10,0,10" HorizontalAlignment="Left" Width="70" Click="Btn_disconnect_Click"/>
        <StatusBar HorizontalAlignment="Left" Margin="0,0.4,0,0" Grid.Row="4" Width="320">
            <StatusBarItem>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Connection state: "/>
                    <TextBlock x:Name="lblConnectionState"/>
                </StackPanel>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Cyclic read time: "/>
                    <TextBlock x:Name="lblReadTime"/>
                </StackPanel>
            </StatusBarItem>
        </StatusBar>
        <Button x:Name="btn_getData" Content="Get Data" Margin="160,10,0,10" HorizontalAlignment="Left" Width="70" Click="Btn_getData_Click"/>

    </Grid>
</Window>
